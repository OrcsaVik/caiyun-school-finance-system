<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.caiyun.mapper.RefundRecordMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.github.caiyun.pay.model.entity.RefundRecordDO">
        <id property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="userId" column="user_id"/>
        <result property="amount" column="amount"/>
        <result property="status" column="status"/>
        <result property="reason" column="reason"/>
        <result property="description" column="description"/>
        <result property="refundNo" column="refund_no"/>
        <result property="refundTime" column="refund_time"/>
        <result property="failReason" column="fail_reason"/>
        <result property="expectedArrivalTime" column="expected_arrival_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <!-- 字段列表，用于减少SQL重复 -->
    <sql id="base_column_list">
        id, order_id, user_id, amount, status, reason, description,
        refund_no, refund_time, fail_reason, expected_arrival_time,
        create_time, update_time, deleted
    </sql>

    <!-- 根据订单ID查询最新的退款记录 -->
    <select id="selectLatestByOrderId" resultMap="BaseResultMap">
        SELECT
        <include refid="base_column_list"/>
        FROM refund_record
        WHERE order_id = #{orderId}
        AND deleted = 0
        ORDER BY create_time DESC
        LIMIT 1
    </select>

    <!-- 根据订单ID查询退款总金额 -->
    <select id="selectTotalAmountByOrderId" resultType="java.lang.Long">
        SELECT SUM(amount)
        FROM refund_record
        WHERE order_id = #{orderId}
          AND status = 'SUCCESS'
          AND deleted = 0
    </select>

</mapper>